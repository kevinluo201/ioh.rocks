<style>
	table {
		border-collapse: collapse !important;
	}

	thead, tbody{
		border: 2px solid black;
	}

	table.table > thead > tr > th {
		border: 2px solid black;
	}

	table,
	td,
	th {
		border: 1px solid black;
	}
	.table > tbody > tr > td.time_td {
		vertical-align: middle;
	}

	td.empty_td, .time_td {
		border-right: 2px solid black;
		border-top: 0px !important;
		border-bottom: 0px;
	}

	.thaed_css {
		width: 31.666%;
	}

	.final_slot {
		background-color: white;
		border-top: 2px solid black;
		border-bottom: 2px solid black;
	}

	.all_td_final {
		background-color: rgba(0, 0, 0, 0.1);
		width: 30px;
		height: 70px;
		font-size: 0.75em;
		vertical-align: middle !important;
		text-align: center;
	}

	.all_td_event {
		width: 30px;
		height: 70px;
		font-size: 0.75em;
		vertical-align: middle !important;
		color: black;
		cursor: pointer;
		position: relative;
		z-index: 2;
	}

	.blue_background {
		background-color: #C5E5EC;
	}

	.green_background {
		background-color: #D4E9D0;
	}

	.orange_background {
		background-color: #E1D6EA;
	}

	.yellow_background {
		background-color: #FEF6AB;
		color: black;
	}

	.selected {
		background-color: red !important;
	}

	.closon {
		width: 50%;
		display: none;
		cursor: pointer;
		text-align: left;
		color: black;
		z-index: 3;
	}

	[draggable] {
	  -moz-user-select: none;
	  -khtml-user-select: none;
	  -webkit-user-select: none;
	  user-select: none;
	  -khtml-user-drag: element;
	  -webkit-user-drag: element;
	}

	.all_td_final.over {
	  border: 2px dashed #000 !important;
	}

	.overlay {
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		text-align: center;
		line-height: 70px;
		font-size: medium;
		z-index: 1;
		visibility: hidden;
		color: white;
		background-color: rgba(0, 0, 0, 0.5);
	}

	#save_btn {
		position: absolute;
		bottom: 0px;
		right: 0px;
	}

</style>


<br>
<div class="row" style="height: 200px;">
	<div class="col-md-8" style="padding-left: 0px;">
		<%= image_tag("agenda-legend.png", class: "img-responsive") %>
	</div>
	<div class="col-md-4" style="padding-left: 0px; position: relative; height: 200px;">
		<a class="btn btn-default" id="save_btn">儲存</a>
	</div>

</div>
<br>


<table class="table text-center table-condensed">
	<thead>
		<tr>
			<th style="width: 5%;"></th>
			<% (@live_event.start_date..@live_event.end_date).each do |date| %>
				<th class="text-center thaed_css" colspan="5"><%= date.strftime('%m/%d') %></th>
			<% end %>
		</tr>
	</thead>
	<tbody></tbody>
</table>

<script>
	var user_idObj = {},
			time_idObj = {<%= @live_event.live_times.map { |t| "#{t.id}:[]"}.join(', ') %>},
			time_startArr = [],
			time_endArr = [];

	var json = (function () {
		var json = null;
		$.ajax({
			'async': false,
			'global': false,
			'url': 'http://ioh.rocks/api/live.json',
			'dataType': "json",
			'success': function (data) {
				json = data;

				$.each(json, function (index, data) {

					if (!(data['user_id'] in user_idObj))
						user_idObj[data['user_id']] = 1;
					else
						user_idObj[data['user_id']] += 1;

					data['id'] = index;
					data['user_name'] = data['title'];
					data['title'] += ('<br>' + data['school'] + '<br>' + data['department']);

					$.each(data, function (key, value) {
						if (key === 'start') {
							var date = new Date(value);
							data[key] = (date.getMonth() + 1) + '/' + date.getDate() + ' ' + date.getHours() + ':' + (date.getMinutes() < 10 ? '0' : '') + date.getMinutes();
							if (!(time_startArr.indexOf(data[key]) > -1))
								time_startArr.push(data[key]);
							}
						else if (key === 'end') {
							var date = new Date(value);
							data[key] = (date.getMonth() + 1) + '/' + date.getDate() + ' ' + date.getHours() + ':' + (date.getMinutes() < 10 ? '0' : '') + date.getMinutes();
							if (!(time_endArr.indexOf(data[key]) > -1))
								time_endArr.push(data[key]);
						}
					})

					time_idObj[data['time_id']].push({
						id: data['id'],
						user_id: data['user_id'],
						user_name: data['user_name'],
						title: data['title']
					});
				})
			}
		});
		return json;
	})();

	var renderHtml_1 = '', renderHtml_2 = '';

	//render出final slot
	<% @live_times_array.each_with_index do |live_times, i| %>
		<% i += 1 %>
		var mon_time_id = <%= live_times[0].id %>,
				tue_time_id = <%= live_times[1].id %>,
				wed_time_id = <%= live_times[2].id %>;

		renderHtml_1 += '<tr class="final_slot" id="final_slot_' + <%= i %> + '">';
		renderHtml_1 += '<td class="time_td"><b>' + "<%= live_times[0].start.strftime('%H:%M') %>" + '<br>~<br>' + "<%= (live_times[0].start + 30.minutes).strftime('%H:%M') %>" + '</b></td>';

		for (var y = 1; y <= 5; y++) {
			if(y < 5)
				renderHtml_1 += '<td class="all_td_final" time_id="' + mon_time_id + '" channel="Mon 頻道' + y + '-' + ((<%= i %>%2)+1) + '"> <div><b>Mon<br>頻道' + y + '-' + ((<%= i %>%2)+1) + '</b></div> </td>';
			else
			renderHtml_1 += '<td class="all_td_final" time_id="' + mon_time_id + '" channel="Mon 頻道' + y + '-' + ((<%= i %>%2)+1) + '" style="border-right: 2px solid;"> <div><b>Mon<br>頻道' + y + '-' + ((<%= i %>%2)+1) + '</b></div> </td>';
		}

		for (var y = 1; y <= 5; y++) {
			if(y < 5)
			renderHtml_1 += '<td class="all_td_final" time_id="' + tue_time_id + '" channel="Tue 頻道' + y + '-' + ((<%= i %>%2)+1) + '"> <div><b>Tue<br>頻道' + y + '-' + ((<%= i %>%2)+1) + '</b></div> </td>';
			else
				renderHtml_1 += '<td class="all_td_final" time_id="' + tue_time_id + '" channel="Tue 頻道' + y + '-' + ((<%= i %>%2)+1) + '" style="border-right: 2px solid;"> <div><b>Tue<br>頻道' + y + '-' + ((<%= i %>%2)+1) + '</b></div> </td>';
		}

		for (var y = 1; y <= 5; y++) {
			renderHtml_1 += '<td class="all_td_final" time_id="' + wed_time_id + '" channel="Wed 頻道' + y + '-' + ((<%= i %>%2)+1) + '"> <div><b>Wed<br>頻道' + y + '-' + ((<%= i %>%2)+1)+ '</b></div> </td>';
		}

		renderHtml_1 += '</tr>';

	<% end %>

	$('tbody').append(renderHtml_1);

	//render出講者資訊
	<% @live_times_array.each_with_index do |live_times, i| %>
		<% i += 1 %>

		var mon_data = <%= live_times[0].id %>,
				tue_data = <%= live_times[1].id %>,
				wed_data = <%= live_times[2].id %>;

		var rowNum = Math.max(time_idObj[mon_data].length / 5, time_idObj[tue_data].length / 5, time_idObj[wed_data].length / 5);
		rowNum = Math.ceil(rowNum);
		renderHtml_2 = '';

		for (var j = 0; j < rowNum; j++) {
			var fiveJ = j * 5;
			renderHtml_2 += '<tr>';
			renderHtml_2 += '<td class="empty_td"></td>';

			for (var z = 0; z < 5; z++) {
				if(z == 4) {
					if(time_idObj[mon_data][fiveJ + z])
						renderHtml_2 += '<td class="mon_td_event all_td_event" draggable="true" data="' + time_idObj[mon_data][fiveJ + z].id + '" user_id="' + time_idObj[mon_data][fiveJ + z].user_id + '" style="border-right: 2px solid;""> <div class="overlay">還原</div> <div><b user_name="' + time_idObj[mon_data][fiveJ + z].user_name + '">' + time_idObj[mon_data][fiveJ + z].title + '</b></div> <div class="closon">隱藏</div> </td>';
					else
						renderHtml_2 += '<td class="mon_td_event" style="border-right: 2px solid;"> <div class="mon_div"></div> </td>';
				}
				else {
					if(time_idObj[mon_data][fiveJ + z])
						renderHtml_2 += '<td class="mon_td_event all_td_event" draggable="true" data="' + time_idObj[mon_data][fiveJ + z].id + '" user_id="' + time_idObj[mon_data][fiveJ + z].user_id + '""> <div class="overlay">還原</div> <div><b user_name="' + time_idObj[mon_data][fiveJ + z].user_name + '">' + time_idObj[mon_data][fiveJ + z].title + '</b></div> <div class="closon">隱藏</div> </td>';
					else
						renderHtml_2 += '<td class="mon_td_event"> <div class="mon_div"></div> </td>';
				}
			}

			for (var z = 0; z < 5; z++) {
				if(z == 4) {
					if(time_idObj[tue_data][fiveJ + z])
						renderHtml_2 += '<td class="tue_td_event all_td_event" draggable="true" data="' + time_idObj[tue_data][fiveJ + z].id + '" user_id="' + time_idObj[tue_data][fiveJ + z].user_id + '" style="border-right: 2px solid;""> <div class="overlay">還原</div> <div><b user_name="' + time_idObj[tue_data][fiveJ + z].user_name + '">' + time_idObj[tue_data][fiveJ + z].title + '</b></div> <div class="closon">隱藏</div> </td>';
					else
						renderHtml_2 += '<td class="tue_td_event" style="border-right: 2px solid;"> <div class="tue_div"></div> </td>';
				}
				else {
					if(time_idObj[tue_data][fiveJ + z])
						renderHtml_2 += '<td class="tue_td_event all_td_event" draggable="true" data="' + time_idObj[tue_data][fiveJ + z].id + '" user_id="' + time_idObj[tue_data][fiveJ + z].user_id + '""> <div class="overlay">還原</div> <div><b user_name="' + time_idObj[tue_data][fiveJ + z].user_name + '">' + time_idObj[tue_data][fiveJ + z].title + '</b></div> <div class="closon">隱藏</div> </td>';
					else
						renderHtml_2 += '<td class="tue_td_event"> <div class="tue_div"></div> </td>';
				}
			}

			for (var z = 0; z < 5; z++) {
				if(time_idObj[wed_data][fiveJ + z])
					renderHtml_2 += '<td class="wed_td_event all_td_event" draggable="true" data="' + time_idObj[wed_data][fiveJ + z].id + '" user_id="' + time_idObj[wed_data][fiveJ + z].user_id + '""> <div class="overlay">還原</div> <div><b user_name="' + time_idObj[wed_data][fiveJ + z].user_name + '">' + time_idObj[wed_data][fiveJ + z].title + '</b></div> <div class="closon">隱藏</div> </td>';
				else
					renderHtml_2 += '<td class="wed_td_event"> <div class="wed_div"></div> </td>';
			}

			renderHtml_2 += '</tr>';
		}
		var selector = 'tr#final_slot_' + "<%= i %>" + '.final_slot';
		$(selector).after(renderHtml_2);
	<% end %>

	//上背景色
	$('td.all_td_event').each(function(){
		var tmp = user_idObj[$(this).attr('user_id')];
		if(tmp <= 2)
			$(this).addClass('orange_background');
		else if(tmp <= 4)
			$(this).addClass('blue_background');
		else {
			$(this).addClass('green_background');
		}
	});

	//td_event click event
	$('.all_td_event').click( all_td_event_click = function(){
		var _this_user_id = $(this).attr('user_id');
		if(_this_user_id != undefined) {
			$('td.all_td_event').each(function(){
				if($(this).attr('user_id') == _this_user_id){
					if($(this).hasClass('selected')) {
						$(this).removeClass('selected');
						$(this).children('.closon').hide();
					}
					else {
						$(this).addClass('selected');
						$(this).children('.closon').show();
					}
				}
			});
		}
	});

	// 隱藏功能
	$('.closon').click( closon_click = function () {
		$(this).parents('.selected').unbind('click');
		$(this).siblings('.overlay').css('visibility', 'visible');
	});

	// 還原功能
	$('.overlay').click( overlay_click = function() {
		$(this).css('visibility', 'hidden');
		$(this).parents('.all_td_event').bind('click', all_td_event_click);
		$(this).parents('.all_td_event').trigger('click');
	});

	// drag and drop
	var dragSrcEl = null;
	var fromEvent = false;

	function handleDragStart(e) {

		var _this = $(this);
		if($(this).children().hasClass('closon'))
			fromEvent = true;
		else
			fromEvent = false;

	  this.style.opacity = '0.4';

		dragSrcEl = this;

	  e.originalEvent.dataTransfer.effectAllowed = 'move';
	  e.originalEvent.dataTransfer.setData('text/html', this.innerHTML);
	}

	function handleDragOver(e) {
	  if (e.preventDefault) {
	    e.preventDefault();
	  }
		$(this).addClass('over');
	  e.originalEvent.dataTransfer.dropEffect = 'move';

	  return false;
	}

	function handleDragEnter(e) {
	  $(this).addClass('over');
	}

	function handleDragLeave(e) {
	  $(this).removeClass('over');
	}

	function handleDrop(e) {

		if(!($(this).hasClass('yellow_background')))
			$(this).addClass('yellow_background');
		else if(!fromEvent)
			$(this).removeClass('yellow_background');

	  if (e.stopPropagation) {
	    e.stopPropagation();
	  }

		if (dragSrcEl != this) {
	    dragSrcEl.innerHTML = this.innerHTML;
	    this.innerHTML = e.originalEvent.dataTransfer.getData('text/html');
	  }

		$(this).children('.closon').hide();

		// 隱藏功能
		$('.closon').unbind('click').click(function () {
			$(this).parents('.selected').unbind('click');
			$(this).siblings('.overlay').css('visibility', 'visible');
		});

		// 還原功能
		$('.overlay').unbind('click').click(function() {
			$(this).css('visibility', 'hidden');
			$(this).parents('.all_td_event').bind('click', all_td_event_click);
			$(this).parents('.all_td_event').trigger('click');
		});


	  return false;
	}

	function handleDragEnd(e) {
		if($(this).hasClass('all_td_event'))
			this.style.opacity = '1';

	  $('.all_td_final').each(function(){
	    $(this).removeClass('over');
	  });
	}

	$('.all_td_event').each(function(){
		$(this).on('dragstart', handleDragStart);
		$(this).on('dragend', handleDragEnd);
	});

	$('.all_td_final').each(function(){
		$(this).on('dragenter', handleDragEnter);
		$(this).on('dragover', handleDragOver);
		$(this).on('dragleave', handleDragLeave);
		$(this).on('drop', handleDrop);
		$(this).on('dragend', handleDragEnd);
	});

	$('#save_btn').click(function(){
		var postData = [];
		$('.all_td_final').each(function(){
			var tmpObj = {}
			tmpObj['name'] = $(this).find('b').attr('user_name');
			tmpObj['time_id'] = $(this).attr('time_id');
			tmpObj['channel'] = $(this).attr('channel');
			postData.push(tmpObj);
		});

		$.ajax({
			'url': 'http://ioh.rocks/api/live',
			'method': 'PATCH',
			'data': { postData },
			'success': function() {
				alert('儲存完畢！');
				console.log(postData);
			}
		});
	});

	var getData = function () {
    var tmp = null;
    $.ajax({
				'async': false,
        'type': "GET",
        'global': false,
        'dataType': "json",
        'url': "http://ioh.rocks/api/live/schedule",
        'success': function (data) {
          tmp = data;
        }
    });

    return tmp;
	}();

	for (var key in getData) {
		if(getData[key].name != null) {
			console.log(getData[key].name);
			var selector = 'td.all_td_final[time_id="' + getData[key].time_id + '"][channel="' + getData[key].channel + '"]';
			var textStr = '<div><b user_name="' + getData[key].name + '">' + getData[key].name + '<br>' + getData[key].school + '<br>' + getData[key].department + '<b></div>';
			$(selector).addClass('yellow_background');
			$(selector).html(textStr);
		}
  }
</script>
