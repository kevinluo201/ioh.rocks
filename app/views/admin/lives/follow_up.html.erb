<%= render "live_nav" %>

<%= form_tag(admin_live_follow_up_path, :method => "GET") do %>

	<%= label_tag :day, "選擇日期" %>
	<%= select_tag :day, options_for_select([["7/18", 1], ["7/19", 2], ["7/20", 3]], params[:day]) %>

	<%= submit_tag "Go!", class: "btn btn-success" %>
<% end %>

<table class="table table-hover">
	<thead>
		<tr>
				<th>名字</th>
				<th>直播時間</th>
				<th>頻道</th>
				<th>Live Host</th>
				<th>直播地點</th>
				<th>講者截圖</th>
				<th>影片下載</th>
				<th>存到 3TB</th>
				<th>Edit</th>
		</tr>
	</thead>
	<tbody>
		<% @lives.each do |live| %>
			<tr>
				<td><%= live.name %></td>
				<td><%= (live.start + 8*60*60).strftime("%a %H:%M") %></td>
				<td><%= live.chennal %></td>
				<td><%= live.live_host %></td>
				<td><%= live.location %></td>
				<td>
					<% if live.speaker_screenshot %>
						<span class="glyphicon glyphicon-ok" style="color: green;"></span>
					<% else %>
						<span class="glyphicon glyphicon-remove" style="color: red;"></span>
					<% end %>
				</td>
				<td>
					<% if live.video_download %>
						<span class="glyphicon glyphicon-ok" style="color: green;"></span>
					<% else %>
						<span class="glyphicon glyphicon-remove" style="color: red;"></span>
					<% end %>
				</td>
				<td>
					<% if live.save_to_hard_drive %>
						<span class="glyphicon glyphicon-ok" style="color: green;"></span>
					<% else %>
						<span class="glyphicon glyphicon-remove" style="color: red;"></span>
					<% end %>
				</td>
				<td>
					<a href="<%= "/admin/live/follow_up/#{live.id}/edit" %>">
						<span class="glyphicon glyphicon-edit"></span>
					</a>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<script>
	new Clipboard('.copy-link');

	$('.copy-link').click(function(){
		$(this).text("Copied!");
	});
</script>